<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="MyTrip "
        android:titleTextColor="@color/colorText"
        />

    <EditText
        android:layout_width="match_parent"
        android:hint="@string/distancia"
        android:layout_height="50dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGray"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/round_et"
        android:gravity="center"
        android:id="@+id/editDistance"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Total de Quilometros"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:hint="@string/preco"
        android:id="@+id/editPreco"
        android:layout_height="50dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGray"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:background="@drawable/round_et"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Preço por Litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:hint="@string/autonomia"
        android:id="@+id/editAutonomia"
        android:layout_height="50dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGray"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:background="@drawable/round_et"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="KMS por litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Seu gasto total será de:"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="R$ 0,00"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#fd6a6a"
        android:textSize="35sp"
        android:id="@+id/textResult"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:background="@drawable/round_btn"
        android:id="@+id/btnCalcular"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:textAllCaps="true"
        android:textColor="@color/colorLightGray"
        android:textSize="20sp"
        />
</LinearLayout>